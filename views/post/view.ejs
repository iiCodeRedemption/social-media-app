<h1><%= post.title %></h1>
<div class="d-flex align-items-center gap-2 mb-2">
  <%- include("../partials/like-form", {
    url: `/post/${post._id}/like`,
    liked: post.likes.includes(locals.userId)
  }) %>
  <%- include("../partials/like-badge", { count: post.likes.length }) %>
</div>
<p class="text-muted"><strong>Created At:</strong> <%= post.createdAt.toLocaleDateString() %></p>
<p class="post-content"><%= post.content %></p>